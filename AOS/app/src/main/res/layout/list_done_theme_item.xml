<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/rounded_rectangle_bg"
    android:padding="16dp">


    <ImageView
        android:id="@+id/iv_doneL_img"
        android:layout_width="100dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_themejpg" />

    <TextView
        android:id="@+id/tv_doneL_tname"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        android:text="테마 이름"
        android:textColor="@color/moabang_gray"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="16dp"
        android:autoSizeMinTextSize="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_doneL_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_doneL_cname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="카페이름"
        android:textColor="@color/moabang_pink"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/tv_doneL_tname"
        app:layout_constraintTop_toBottomOf="@+id/tv_doneL_tname" />

    <TextView
        android:id="@+id/tv_doneL_isSucess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:text="탈출 성공"
        android:textColor="@color/moabang_pink"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_doneL_img" />

    <TextView
        android:id="@+id/doneL_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="★"
        android:textColor="@color/moabang_pink"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_doneL_isSucess"
        app:layout_constraintStart_toEndOf="@+id/tv_doneL_isSucess" />

    <TextView
        android:id="@+id/tv_doneL_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="별점"
        android:textColor="@color/moabang_gray"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/doneL_rate"
        app:layout_constraintStart_toEndOf="@+id/doneL_rate" />

    <TextView
        android:id="@+id/tv_doneL_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="2022.05.13, 2명"
        android:textColor="@color/moabang_gray"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_doneL_rate"
        app:layout_constraintStart_toEndOf="@+id/tv_doneL_rate" />


</androidx.constraintlayout.widget.ConstraintLayout>
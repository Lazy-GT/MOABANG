<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/rounded_rectangle">


    <TextView
        android:id="@+id/tv_ctItem_title"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:autoSizeMaxTextSize="16dp"
        android:autoSizeMinTextSize="8dp"
        android:autoSizeTextType="uniform"
        android:gravity="center_vertical"
        android:text="THEME TITLE"
        android:textColor="@color/moabang_gray"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_ctItem_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ctItem_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="비교"
        android:textColor="@color/moabang_pink"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ctItem_delete"
        app:layout_constraintEnd_toStartOf="@+id/tv_ctItem_delete"
        app:layout_constraintTop_toTopOf="@+id/tv_ctItem_delete" />

    <TextView
        android:id="@+id/tv_ctItem_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:text="삭제"
        android:textColor="@color/moabang_pink"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
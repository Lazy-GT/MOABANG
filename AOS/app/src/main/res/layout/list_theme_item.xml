<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/rounded_rectangle_bg"
    android:padding="16dp">


    <ImageView
        android:id="@+id/iv_themeL_img"
        android:layout_width="100dp"
        android:layout_height="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_themejpg" />

    <TextView
        android:id="@+id/tv_themeL_theme_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:autoSizeMaxTextSize="20dp"
        android:autoSizeMinTextSize="8dp"
        android:autoSizeTextType="uniform"
        android:maxLines="2"
        android:text="테마 이름"
        android:textColor="@color/moabang_gray"
        app:layout_constraintBottom_toTopOf="@+id/themeL_blank3"
        app:layout_constraintEnd_toEndOf="@+id/tv_themeL_cafe_name"
        app:layout_constraintStart_toStartOf="@+id/tv_themeL_cafe_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_themeL_cafe_name" />

    <TextView
        android:id="@+id/tv_themeL_cafe_name"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        android:text="카페이름"
        android:textColor="@color/moabang_pink"
        android:autoSizeMaxTextSize="15dp"
        android:autoSizeMinTextSize="8dp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@+id/iv_themeL_like"
        app:layout_constraintStart_toEndOf="@+id/iv_themeL_img"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/themeL_blank3"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_themeL_genre"
        app:layout_constraintStart_toEndOf="@+id/iv_themeL_img"
        app:layout_constraintTop_toBottomOf="@+id/tv_themeL_theme_name" />

    <View
        android:id="@+id/themeL_blank"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_themeL_rating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_themeL_rating" />


    <ImageView
        android:id="@+id/iv_themeL_like"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_themeL_theme_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_like_before" />

    <TextView
        android:id="@+id/tv_themeL_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="장르"
        android:textColor="@color/moabang_gray"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/themeL_player"
        app:layout_constraintEnd_toStartOf="@+id/tv_themeL_time"
        app:layout_constraintStart_toEndOf="@+id/iv_themeL_img"
        app:layout_constraintTop_toBottomOf="@+id/themeL_blank3" />

    <TextView
        android:id="@+id/tv_themeL_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="시간"
        android:textColor="@color/moabang_gray"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_themeL_genre"
        app:layout_constraintEnd_toStartOf="@+id/themeL_diff"
        app:layout_constraintStart_toEndOf="@+id/tv_themeL_genre" />

    <TextView
        android:id="@+id/tv_themeL_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:text="★"
        android:textColor="@color/moabang_pink"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_themeL_diff"
        app:layout_constraintEnd_toStartOf="@+id/tv_themeL_rating"
        app:layout_constraintStart_toEndOf="@+id/tv_themeL_diff" />

    <TextView
        android:id="@+id/tv_themeL_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="별점"
        android:textColor="@color/moabang_gray"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_themeL_star"
        app:layout_constraintEnd_toStartOf="@+id/themeL_blank"
        app:layout_constraintStart_toEndOf="@+id/tv_themeL_star" />

    <TextView
        android:id="@+id/themeL_diff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:text="난이도"
        android:textColor="@color/moabang_pink"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_themeL_time"
        app:layout_constraintEnd_toStartOf="@+id/tv_themeL_diff"
        app:layout_constraintStart_toEndOf="@+id/tv_themeL_time"
        app:layout_constraintTop_toTopOf="@+id/tv_themeL_time" />

    <TextView
        android:id="@+id/tv_themeL_diff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="5"
        android:textColor="@color/moabang_gray"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/themeL_diff"
        app:layout_constraintEnd_toStartOf="@+id/tv_themeL_star"
        app:layout_constraintStart_toEndOf="@+id/themeL_diff" />

    <TextView
        android:id="@+id/themeL_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="3dp"
        android:text="인원"
        android:textColor="@color/moabang_pink"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_themeL_player"
        app:layout_constraintStart_toEndOf="@+id/iv_themeL_img" />

    <TextView
        android:id="@+id/tv_themeL_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:text="2~4"
        android:textColor="@color/moabang_gray"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/themeL_player"
        app:layout_constraintEnd_toStartOf="@+id/themeL_type"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/themeL_player" />

    <TextView
        android:id="@+id/themeL_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:text="타입"
        android:textColor="@color/moabang_pink"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_themeL_player"
        app:layout_constraintEnd_toStartOf="@+id/tv_themeL_type"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_themeL_player" />

    <TextView
        android:id="@+id/tv_themeL_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:text="자물쇠"
        android:textColor="@color/moabang_gray"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/themeL_type"
        app:layout_constraintEnd_toStartOf="@+id/themeL_active"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/themeL_type" />

    <TextView
        android:id="@+id/themeL_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:text="활동성"
        android:textColor="@color/moabang_pink"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_themeL_type"
        app:layout_constraintEnd_toStartOf="@+id/tv_themeL_active"
        app:layout_constraintStart_toEndOf="@+id/tv_themeL_type" />

    <TextView
        android:id="@+id/tv_themeL_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:text="보통"
        android:textColor="@color/moabang_gray"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/themeL_active"
        app:layout_constraintEnd_toStartOf="@+id/themeL_blank2"
        app:layout_constraintStart_toEndOf="@+id/themeL_active" />

    <View
        android:id="@+id/themeL_blank2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_themeL_active"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_themeL_active"
        app:layout_constraintTop_toTopOf="@+id/tv_themeL_active" />

    <TextView
        android:id="@+id/tv_themeL_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIKE"
        android:textColor="@color/moabang_gray"
        android:textSize="12dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/iv_themeL_like"
        app:layout_constraintStart_toStartOf="@+id/iv_themeL_like"
        app:layout_constraintTop_toBottomOf="@+id/iv_themeL_like" />


</androidx.constraintlayout.widget.ConstraintLayout>